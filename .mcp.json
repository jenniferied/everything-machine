{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@anthropic-ai/mcp-playwright@latest"],
      "disabled": true
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "disabled": true
    },
    "zotero": {
      "command": "npx",
      "args": ["-y", "mcp-zotero"],
      "disabled": true
    },
    "semantic-scholar": {
      "command": "uvx",
      "args": ["semantic-scholar-mcp", "serve"],
      "disabled": true
    },
    "openalex": {
      "command": "npx",
      "args": ["-y", "@seacolour/openalex-mcp-tool"],
      "disabled": true
    }
  }
}
